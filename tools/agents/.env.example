# Personal Radio Promo Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# Monday.com Integration
MONDAY_API_KEY=your_monday_api_key_here
MONDAY_BOARD_ID=your_default_board_id

# Google Chat Notifications
GOOGLE_CHAT_WEBHOOK=https://chat.googleapis.com/v1/spaces/SPACE_ID/messages?key=KEY&token=TOKEN
GOOGLE_CHAT_CAMPAIGNS_ROOM=campaigns-room-id

# WARM API Configuration
WARM_API_URL=https://api.warm-music.com
WARM_API_KEY=your_warm_api_key_here

# Database Configuration (if using Prisma)
DATABASE_URL=postgresql://user:password@localhost:5432/total_audio_promo

# Optional: Custom notification thresholds
PLAY_COUNT_MILESTONE_100=true
PLAY_COUNT_MILESTONE_500=true
PLAY_COUNT_MILESTONE_1000=true
PLAY_COUNT_MILESTONE_5000=true
PLAY_COUNT_MILESTONE_10000=true

# Optional: File paths (defaults to current directory)
TRANSCRIPT_DIR=./transcripts
CAMPAIGNS_DIR=./campaigns
PRESS_RELEASES_DIR=./press-releases
TRACKING_DATA_DIR=./tracking-data