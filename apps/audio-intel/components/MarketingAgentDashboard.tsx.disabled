'use client';

import React, { useState, useEffect } from 'react';
import { Card, CardContent, CardHeader, CardTitle } from './ui/card';

interface AgentMetrics {
  redditOpportunities: {
    total: number;
    highValue: number;
    engaged: number;
    pending: number;
  };
  emailCampaigns: {
    sent: number;
    opened: number;
    clicked: number;
    replied: number;
    openRate: number;
    clickRate: number;
  };
  betaSignups: {
    total: number;
    today: number;
    weekly: number;
    conversionRate: number;
  };
  competitiveIntel: {
    opportunities: number;
    mentions: number;
    threats: number;
    lastScan: string;
  };
}

const MarketingAgentDashboard: React.FC = () => {
  const [metrics, setMetrics] = useState<AgentMetrics | null>(null);
  const [loading, setLoading] = useState(true);
  const [agentStatus, setAgentStatus] = useState<'active' | 'paused' | 'error'>('active');

  useEffect(() => {
    fetchAgentMetrics();
    const interval = setInterval(fetchAgentMetrics, 60000); // Update every minute
    return () => clearInterval(interval);
  }, []);

  const fetchAgentMetrics = async () => {
    try {
      const response = await fetch('/api/agents/marketing/metrics');
      const data = await response.json();
      setMetrics(data.metrics);
      setAgentStatus(data.status);
    } catch (error) {
      console.error('Failed to fetch agent metrics:', error);
      setAgentStatus('error');
    } finally {
      setLoading(false);
    }
  };

  const triggerManualScan = async () => {
    try {
      setLoading(true);
      await fetch('/api/agents/marketing/trigger', { method: 'POST' });
      await fetchAgentMetrics();
    } catch (error) {
      console.error('Failed to trigger manual scan:', error);
    }
  };

  if (loading && !metrics) {
    return (
      <div className="p-6">
        <div className="animate-pulse">
          <div className="h-8 bg-gray-200 rounded w-1/3 mb-6"></div>
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {[...Array(4)].map((_, i) => (
              <div key={i} className="h-32 bg-gray-200 rounded"></div>
            ))}
          </div>
        </div>
      </div>
    );
  }

  const getStatusColor = (status: string) => {
    switch (status) {
      case 'active': return 'text-green-600';
      case 'paused': return 'text-yellow-600';
      case 'error': return 'text-red-600';
      default: return 'text-gray-600';
    }
  };

  const getStatusDot = (status: string) => {
    switch (status) {
      case 'active': return 'bg-green-400';
      case 'paused': return 'bg-yellow-400';
      case 'error': return 'bg-red-400';
      default: return 'bg-gray-400';
    }
  };

  return (
    <div className="p-6 bg-gray-50 min-h-screen">
      {/* Header */}
      <div className="flex justify-between items-center mb-6">
        <div>
          <h1 className="text-3xl font-bold text-gray-900">Marketing Agent Dashboard</h1>
          <div className="flex items-center mt-2">
            <div className={`w-3 h-3 rounded-full ${getStatusDot(agentStatus)} mr-2`}></div>
            <span className={`text-sm font-medium ${getStatusColor(agentStatus)}`}>
              {agentStatus.charAt(0).toUpperCase() + agentStatus.slice(1)}
            </span>
            <span className="text-gray-500 ml-2">â€¢ Last updated: {new Date().toLocaleTimeString()}</span>
          </div>
        </div>
        <button
          onClick={triggerManualScan}
          disabled={loading}
          className="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 disabled:opacity-50"
        >
          {loading ? 'Scanning...' : 'Manual Scan'}
        </button>
      </div>

      {/* Key Metrics Grid */}
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        {/* Reddit Opportunities */}
        <Card>
          <CardHeader className="pb-2">
            <CardTitle className="text-sm font-medium text-gray-600">Reddit Opportunities</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="text-2xl font-bold text-gray-900">{metrics?.redditOpportunities.total || 0}</div>
            <div className="text-xs text-gray-500 mt-1">
              {metrics?.redditOpportunities.highValue || 0} high-value
            </div>
            <div className="flex justify-between text-xs mt-2">
              <span className="text-green-600">Engaged: {metrics?.redditOpportunities.engaged || 0}</span>
              <span className="text-orange-600">Pending: {metrics?.redditOpportunities.pending || 0}</span>
            </div>
          </CardContent>
        </Card>

        {/* Email Performance */}
        <Card>
          <CardHeader className="pb-2">
            <CardTitle className="text-sm font-medium text-gray-600">Email Performance</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="text-2xl font-bold text-gray-900">
              {metrics?.emailCampaigns.openRate ? `${(metrics.emailCampaigns.openRate * 100).toFixed(1)}%` : '0%'}
            </div>
            <div className="text-xs text-gray-500 mt-1">Open Rate</div>
            <div className="flex justify-between text-xs mt-2">
              <span>Sent: {metrics?.emailCampaigns.sent || 0}</span>
              <span>CTR: {metrics?.emailCampaigns.clickRate ? `${(metrics.emailCampaigns.clickRate * 100).toFixed(1)}%` : '0%'}</span>
            </div>
          </CardContent>
        </Card>

        {/* Beta Signups */}
        <Card>
          <CardHeader className="pb-2">
            <CardTitle className="text-sm font-medium text-gray-600">Beta Signups</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="text-2xl font-bold text-gray-900">{metrics?.betaSignups.total || 0}</div>
            <div className="text-xs text-gray-500 mt-1">Total signups</div>
            <div className="flex justify-between text-xs mt-2">
              <span className="text-green-600">Today: {metrics?.betaSignups.today || 0}</span>
              <span className="text-blue-600">Weekly: {metrics?.betaSignups.weekly || 0}</span>
            </div>
          </CardContent>
        </Card>

        {/* Competitive Intel */}
        <Card>
          <CardHeader className="pb-2">
            <CardTitle className="text-sm font-medium text-gray-600">Competitive Intel</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="text-2xl font-bold text-gray-900">{metrics?.competitiveIntel.opportunities || 0}</div>
            <div className="text-xs text-gray-500 mt-1">Opportunities found</div>
            <div className="flex justify-between text-xs mt-2">
              <span>Mentions: {metrics?.competitiveIntel.mentions || 0}</span>
              <span className="text-red-600">Threats: {metrics?.competitiveIntel.threats || 0}</span>
            </div>
          </CardContent>
        </Card>
      </div>

      {/* Progress Toward Goals */}
      <div className="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <Card>
          <CardHeader>
            <CardTitle>90-Day Beta Goal Progress</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="space-y-4">
              <div>
                <div className="flex justify-between text-sm mb-1">
                  <span>Beta Users (Target: 1,000)</span>
                  <span>{metrics?.betaSignups.total || 0}/1,000</span>
                </div>
                <div className="w-full bg-gray-200 rounded-full h-2">
                  <div 
                    className="bg-blue-600 h-2 rounded-full" 
                    style={{ width: `${Math.min(((metrics?.betaSignups.total || 0) / 1000) * 100, 100)}%` }}
                  ></div>
                </div>
              </div>
              
              <div>
                <div className="flex justify-between text-sm mb-1">
                  <span>Indie Artists (Target: 700)</span>
                  <span>{Math.floor((metrics?.betaSignups.total || 0) * 0.7)}/700</span>
                </div>
                <div className="w-full bg-gray-200 rounded-full h-2">
                  <div 
                    className="bg-green-600 h-2 rounded-full" 
                    style={{ width: `${Math.min((Math.floor((metrics?.betaSignups.total || 0) * 0.7) / 700) * 100, 100)}%` }}
                  ></div>
                </div>
              </div>
              
              <div>
                <div className="flex justify-between text-sm mb-1">
                  <span>PR Agencies (Target: 300)</span>
                  <span>{Math.floor((metrics?.betaSignups.total || 0) * 0.3)}/300</span>
                </div>
                <div className="w-full bg-gray-200 rounded-full h-2">
                  <div 
                    className="bg-purple-600 h-2 rounded-full" 
                    style={{ width: `${Math.min((Math.floor((metrics?.betaSignups.total || 0) * 0.3) / 300) * 100, 100)}%` }}
                  ></div>
                </div>
              </div>
            </div>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle>Performance vs Industry Benchmarks</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="space-y-4">
              <div className="flex justify-between items-center">
                <span className="text-sm">Email Open Rate</span>
                <div className="flex items-center">
                  <span className="text-sm mr-2">
                    {metrics?.emailCampaigns.openRate ? `${(metrics.emailCampaigns.openRate * 100).toFixed(1)}%` : '0%'}
                  </span>
                  <span className="text-xs text-gray-500">(Target: >25%)</span>
                </div>
              </div>
              
              <div className="flex justify-between items-center">
                <span className="text-sm">Email-to-Signup Rate</span>
                <div className="flex items-center">
                  <span className="text-sm mr-2">
                    {metrics?.betaSignups.conversionRate ? `${(metrics.betaSignups.conversionRate * 100).toFixed(1)}%` : '0%'}
                  </span>
                  <span className="text-xs text-gray-500">(Target: >15%)</span>
                </div>
              </div>
              
              <div className="flex justify-between items-center">
                <span className="text-sm">Reddit Engagement Rate</span>
                <div className="flex items-center">
                  <span className="text-sm mr-2">
                    {metrics?.redditOpportunities.total ? 
                      `${((metrics.redditOpportunities.engaged / metrics.redditOpportunities.total) * 100).toFixed(1)}%` : '0%'}
                  </span>
                  <span className="text-xs text-gray-500">(Target: >20%)</span>
                </div>
              </div>
            </div>
          </CardContent>
        </Card>
      </div>

      {/* Agent Activity Log */}
      <Card>
        <CardHeader>
          <CardTitle>Recent Agent Activity</CardTitle>
        </CardHeader>
        <CardContent>
          <div className="space-y-2">
            <div className="flex items-center text-sm">
              <div className="w-2 h-2 bg-green-400 rounded-full mr-3"></div>
              <span className="text-gray-600">2 hours ago</span>
              <span className="ml-4">Found 3 high-value Reddit opportunities in r/WeAreTheMusicMakers</span>
            </div>
            <div className="flex items-center text-sm">
              <div className="w-2 h-2 bg-blue-400 rounded-full mr-3"></div>
              <span className="text-gray-600">4 hours ago</span>
              <span className="ml-4">Sent email sequence to 12 new prospects</span>
            </div>
            <div className="flex items-center text-sm">
              <div className="w-2 h-2 bg-purple-400 rounded-full mr-3"></div>
              <span className="text-gray-600">6 hours ago</span>
              <span className="ml-4">Competitive scan detected 5 Muck Rack complaints</span>
            </div>
            <div className="flex items-center text-sm">
              <div className="w-2 h-2 bg-green-400 rounded-full mr-3"></div>
              <span className="text-gray-600">8 hours ago</span>
              <span className="ml-4">Generated personalized responses for 7 Reddit threads</span>
            </div>
          </div>
        </CardContent>
      </Card>
    </div>
  );
};

export default MarketingAgentDashboard;