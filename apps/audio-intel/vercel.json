{
  "framework": "nextjs",
  "buildCommand": "pnpm --filter audio-intel build",
  "installCommand": "pnpm install --frozen-lockfile",
  "outputDirectory": "apps/audio-intel/.next",
  "env": {
    "NEXT_PUBLIC_BASE_URL": "https://intel.totalaudiopromo.com"
  },
  "functions": {
    "app/api/**": {
      "maxDuration": 30
    }
  },
  "regions": ["lhr1"],
  "crons": [
    {
      "path": "/api/cron/social-posting",
      "schedule": "0 9 * * *"
    }
  ]
}
