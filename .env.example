# Database
DATABASE_URL="postgresql://username:password@localhost:5432/total_audio_promo"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"

# Frontend URL
FRONTEND_URL="http://localhost:3000"

# Backend URL
BACKEND_URL="http://localhost:3001"

# Redis (for job queue)
REDIS_URL="redis://localhost:6379"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Airtable Integration
AIRTABLE_API_KEY="your-airtable-api-key"
AIRTABLE_BASE_ID="your-base-id"

# Mailchimp Integration
MAILCHIMP_API_KEY="your-mailchimp-api-key"
MAILCHIMP_SERVER_PREFIX="us1"

# Gmail Integration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3001/api/integrations/gmail/callback"
GOOGLE_CLOUD_PROJECT="your-google-cloud-project"

# Make.com Integration
MAKE_WEBHOOK_URL="https://hook.make.com/your-webhook-url"
MAKE_API_KEY="your-make-api-key"

# Claude AI Integration
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Stripe (for billing)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# NextAuth (if using NextAuth.js)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR="uploads"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Environment
NODE_ENV="development"
PORT=3001

# White Label Configuration
ENABLE_WHITE_LABEL=true
DEFAULT_BRAND_COLOR="#f6ab00"
DEFAULT_SECONDARY_COLOR="#2538c7"

# Campaign Limits
MAX_CAMPAIGNS_PER_ARTIST=10
MAX_CAMPAIGNS_PER_AGENCY=100
MAX_CONTACTS_PER_CAMPAIGN=1000

# Analytics
ANALYTICS_REFRESH_INTERVAL=3600000  # 1 hour in milliseconds
REPORT_GENERATION_INTERVAL=86400000  # 24 hours in milliseconds