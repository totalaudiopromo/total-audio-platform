{
  "name": "@total-audio/lifecycle",
  "version": "1.0.0",
  "description": "User lifecycle tracking and email automation for Total Audio Platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "lifecycle",
    "user-engagement",
    "email-automation",
    "convertkit",
    "retention",
    "churn-prevention"
  ],
  "author": "Total Audio Platform",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.25",
    "tsup": "^8.5.1",
    "typescript": "5.7.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
