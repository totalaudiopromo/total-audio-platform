{
  "name": "content-domination",
  "version": "1.0.0",
  "description": "Total Audio Content Domination System with Newsjacking Engine",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:content-engine\" \"npm run dev:newsjacker\" \"npm run dev:dashboard\"",
    "dev:content-engine": "npm run dev --workspace=packages/content-engine",
    "dev:newsjacker": "npm run dev --workspace=packages/newsjacker-engine",
    "dev:dashboard": "npm run dev --workspace=apps/dashboard",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "start": "node scripts/start-monitoring.js",
    "setup": "node scripts/verify-setup.js",
    "verify-setup": "node scripts/verify-setup.js",
    "monitor": "node scripts/start-monitoring.js",
    "auth:linkedin": "node scripts/linkedin-auth-simple.js",
    "test:newsjacking": "node scripts/test-newsjacking.js",
    "install:all": "npm install && npm install --workspaces",
    "deploy": "npm run deploy --workspace=tools/deployment",
    "start:economy": "node scripts/economy/business-hours-scheduler.js start",
    "verify:zero-cost": "node scripts/zero-cost-verify.js",
    "monitor:costs": "node scripts/economy/cost-monitor.js dashboard",
    "deploy:free": "node scripts/zero-cost-deploy.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "node-cron": "^3.0.3",
    "rss-parser": "^3.13.0",
    "dotenv": "^16.3.1",
    "cheerio": "^1.0.0-rc.12",
    "sentiment": "^5.0.2",
    "compromise": "^14.10.0",
    "date-fns": "^3.0.0",
    "nodemailer": "^6.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "typescript": "^5.0.0",
    "tsup": "^8.0.0",
    "eslint": "^8.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
