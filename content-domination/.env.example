# ================================================
# CONTENT DOMINATION SYSTEM - PRODUCTION CONFIG
# ================================================
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!

# ================================================
# CORE SYSTEM CONFIGURATION
# ================================================
NODE_ENV=production
PORT=3000
APP_URL=https://your-domain.com

# ================================================
# TWITTER API v2 CONFIGURATION
# ================================================
# Get these from: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here

# ================================================
# LINKEDIN API CONFIGURATION
# ================================================
# Get these from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here
LINKEDIN_REFRESH_TOKEN=your_linkedin_refresh_token_here
LINKEDIN_PERSON_URN=urn:li:person:your_person_urn_here

# ================================================
# NOTION API CONFIGURATION
# ================================================
# Get from: https://www.notion.so/my-integrations
NOTION_API_TOKEN=your_notion_integration_token_here
NOTION_VERSION=2022-06-28

# Notion Database IDs (replace with your actual database IDs)
NOTION_VOICE_EXAMPLES_DB=your_voice_examples_database_id
NOTION_CONTENT_TEMPLATES_DB=your_content_templates_database_id
NOTION_INDUSTRY_TERMS_DB=your_industry_terminology_database_id
NOTION_PERFORMANCE_ANALYTICS_DB=your_performance_analytics_database_id
NOTION_NEWSJACKING_OPPORTUNITIES_DB=your_newsjacking_opportunities_database_id
NOTION_CONTENT_CALENDAR_DB=your_content_calendar_database_id

# ================================================
# CLAUDE API CONFIGURATION
# ================================================
# Get from: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-opus-20240229
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# ================================================
# KIT.COM (CONVERTKIT) API CONFIGURATION
# ================================================
# Get from: https://app.kit.com/account_settings/developer
KIT_API_KEY=your_kit_api_key_here
KIT_API_SECRET=your_kit_api_secret_here
KIT_NEWSLETTER_FORM_ID=your_newsletter_form_id_here
KIT_NEWSLETTER_SEQUENCE_ID=your_94_solution_sequence_id_here

# ================================================
# NEWS SOURCE API CONFIGURATIONS
# ================================================

# Music Business Worldwide
MBW_API_KEY=your_mbw_api_key_if_available
MBW_RSS_URL=https://www.musicbusinessworldwide.com/feed/

# Billboard Pro
BILLBOARD_API_KEY=your_billboard_api_key_if_available
BILLBOARD_RSS_URL=https://www.billboard.com/c/music/music-news/feed/

# Music Week
MUSIC_WEEK_API_KEY=your_music_week_api_key_if_available
MUSIC_WEEK_RSS_URL=https://www.musicweek.com/rss

# BBC Music News
BBC_RSS_URL=https://feeds.bbci.co.uk/news/entertainment_and_arts/rss.xml

# Spotify for Artists
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_NEWS_RSS=https://artists.spotify.com/blog/rss

# Apple Music for Artists
APPLE_NEWS_RSS=https://artists.apple.com/rss

# Digital Music News
DMN_RSS_URL=https://www.digitalmusicnews.com/feed/

# Music Ally
MUSIC_ALLY_RSS_URL=https://musically.com/feed/

# Hypebot
HYPEBOT_RSS_URL=https://www.hypebot.com/feed

# ================================================
# INSTAGRAM API CONFIGURATION (Optional)
# ================================================
# Get from: https://developers.facebook.com/apps
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id_here
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# ================================================
# DATABASE CONFIGURATION
# ================================================
DATABASE_URL=postgresql://username:password@localhost:5432/content_domination
REDIS_URL=redis://localhost:6379

# ================================================
# EMAIL CONFIGURATION (for alerts)
# ================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password_here
ALERT_EMAIL=chris@totalaudiopromo.com

# ================================================
# WEBHOOK CONFIGURATION
# ================================================
WEBHOOK_SECRET=generate_random_secret_here
WEBHOOK_ALERT_URL=https://your-webhook-endpoint.com/alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ================================================
# MONITORING & ANALYTICS
# ================================================
SENTRY_DSN=your_sentry_dsn_here
MIXPANEL_TOKEN=your_mixpanel_token_here
GOOGLE_ANALYTICS_ID=your_ga_measurement_id_here

# ================================================
# SECURITY & RATE LIMITING
# ================================================
JWT_SECRET=generate_strong_random_secret_here
SESSION_SECRET=generate_another_strong_secret_here
ENCRYPTION_KEY=generate_32_byte_hex_string_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================================
# FEATURE FLAGS
# ================================================
ENABLE_NEWSJACKING=true
ENABLE_AUTO_PUBLISH=false
ENABLE_NEWSLETTER_AUTOMATION=true
REQUIRE_APPROVAL_FOR_AUDIO_INTEL=true
ENABLE_COMPETITIVE_MONITORING=true
ENABLE_PERFORMANCE_TRACKING=true

# ================================================
# TIMING CONFIGURATION
# ================================================
TIMEZONE=Europe/London
BUSINESS_HOURS_START=9
BUSINESS_HOURS_END=18
PEAK_POSTING_TIMES=9,13,17
MIN_CONTENT_SPACING_MINUTES=30
MAX_DAILY_POSTS=25

# ================================================
# CONTENT QUALITY THRESHOLDS
# ================================================
MIN_VOICE_CONSISTENCY_SCORE=8.0
MIN_RELEVANCE_SCORE=0.6
AUTO_APPROVAL_THRESHOLD=0.8
VIRAL_THRESHOLD=0.85

# ================================================
# DEBUG & LOGGING
# ================================================
LOG_LEVEL=info
DEBUG_MODE=false
VERBOSE_LOGGING=false