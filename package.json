{
  "name": "total-audio-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Total Audio Promo - Music Industry Tools Platform",
  "scripts": {
    "lint": "npm run lint --workspace=apps/audio-intel",
    "typecheck": "npm run typecheck --workspace=apps/audio-intel",
    "build:audio-intel": "npm run build --workspace=apps/audio-intel",
    "test:audio-intel": "npm run test --workspace=apps/audio-intel",
    "deploy:web": "cd apps/web && vercel --prod",
    "deploy:audio-intel": "cd apps/audio-intel && vercel --prod",
    "deploy:pitch": "cd apps/pitch-generator && vercel --prod",
    "deploy:tracker": "cd apps/tracker && vercel --prod",
    "deploy:all": "npm run deploy:web && npm run deploy:audio-intel && npm run deploy:pitch && npm run deploy:tracker",
    "security:audit": "npm audit --audit-level moderate",
    "security:scan": "export PATH=\"$HOME/bin:$PATH\" && git-secrets --scan",
    "security:check": "npm run security:audit && npm run security:scan",
    "organize-docs": "node scripts/organize-docs.js",
    "organize-docs:dry-run": "node scripts/organize-docs.js --dry-run",
    "organize-docs:verbose": "node scripts/organize-docs.js --verbose",
    "clean-docs": "node scripts/organize-docs.js",
    "install-hooks": "chmod +x scripts/pre-commit-organize-docs.sh && ln -sf ../../scripts/pre-commit-organize-docs.sh .git/hooks/pre-commit && echo 'âœ… Git hooks installed'"
  },
  "keywords": [
    "music",
    "audio",
    "promotion",
    "saas"
  ],
  "author": "Total Audio Promo",
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "styled-jsx": "^5.1.7"
  }
}
